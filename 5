#include <stdio.h>
#include <stdlib.h>

void add(int *mas, int *s, int t)
{
    int k = *s;
    mas = (int *)realloc((int *)mas,(*s = *s + 1)*sizeof(int));
    for(int i=k; i<*s; i++){
        mas[i] = 0;
    }
    for(int i=0; i<*s; i++){
        printf("%d ", mas[i]);

}
}



void del(int *mas, int *s, a)
{
    int k = *s, tmp = 0;
    mas = (int *)realloc((void *)mas,(*s = *s + 1)*sizeof(int));
    mas[*s-1] = 0;
    for (int i = *s-1; i >=a; i--){
        tmp = mas[i], mas[i] = mas[i -1], tmp = mas[i-1];
    }
   
}
int main ()
{
    int n=0, i, a= 0, t =0;
    int *mass;
    printf("Введите количество элементов в массиве:\n");
    scanf("%d", &n);
    mass=(int*)malloc((n)*sizeof(int));

    }
    printf("Введите сначала индекс элемента массива, затем сам элемент:\n");

    for(i=0; i<n; i++) {
        scanf("%d",&a);
        if (a > n-1){
            t = a - (n - 1);
            add(mass, &n, t);
        
        }
        else if (mass[a] != 0){
            del(mass, &n, a)
            
        }
        scanf("%d",&mass[a]);

    }
    printf("Начальный массив: ");
    for(i=0; i<n; i++)
        printf("%d ", mass[i]);
    printf("\n");


    free(mass);
    return 0;
}
